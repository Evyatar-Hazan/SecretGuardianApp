{
  "name": "SecretGuardian",
  "version": "0.0.1",
  "private": true,
  "android": {
    "versionCode": 1,
    "versionName": "0.0.1"
  },
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "prepare": "husky install",
    "tSort": "node -p \"require('./scripts/tSort.js');\" && prettier --write src",
    "release-apk": "cd android/ && ./gradlew app:assembleRelease && cd ..",
    "release-aab": "cd android/ && ./gradlew bundleRelease && cd ..",
    "clean": "cd android/ && ./gradlew clean && cd .."
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-google-signin/google-signin": "^15.0.0",
    "@react-native/new-app-screen": "0.80.0",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/stack": "^7.4.2",
    "i18next": "^25.2.1",
    "react": "19.1.0",
    "react-i18next": "^15.5.3",
    "react-native": "0.80.0",
    "react-native-audio-recorder-player": "^3.6.14",
    "react-native-encrypted-storage": "^4.0.3",
    "react-native-fs": "^2.20.0",
    "react-native-gesture-handler": "^2.26.0",
    "react-native-localize": "^3.4.1",
    "react-native-otp-entry": "^1.8.5",
    "react-native-reanimated": "^3.18.0",
    "react-native-safe-area-context": "^5.5.0",
    "react-native-screens": "^4.11.1",
    "react-native-svg": "^15.12.0",
    "react-native-vision-camera": "^4.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "19.0.0",
    "@react-native-community/cli-platform-android": "19.0.0",
    "@react-native-community/cli-platform-ios": "19.0.0",
    "@react-native/babel-preset": "0.80.0",
    "@react-native/eslint-config": "0.80.0",
    "@react-native/metro-config": "0.80.0",
    "@react-native/typescript-config": "0.80.0",
    "@types/i18next": "^12.1.0",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-native-google-signin": "^1.0.7",
    "@types/react-navigation": "^3.0.8",
    "@types/react-test-renderer": "^19.1.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && npm run tSort && git add -u src/i18n/* && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
